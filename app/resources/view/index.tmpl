{{ define "resources/view/index" }}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="app/resources/assets/dist/output.css" rel="stylesheet">

    <title>
        {{ .APP_NAME }} | {{ .title }}
    </title>
</head>

<body class="p-0 w-full bg-green-200">
    <main>
        <h1>
            {{ .title }} - {{ .APP_NAME }}
        </h1>
        <section>
            <button class="bg-gray-100 p-2 rounded-md border hover:bg-gray-300" id="butt-click">Click</button>
            <img src="app/resources/assets/image/KPJ_ICO.png" alt="KPG Image">
        </section>
        <script src="app/resources/assets/js/app.js"></script>
    </main>
</body>

</html>
